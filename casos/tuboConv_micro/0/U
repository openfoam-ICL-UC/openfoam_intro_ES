FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 1);

boundaryField
{
    inlet
    {
        // La velocidad de entrada es 1 m/s
        type            fixedValue;
        value           uniform (0 0 1);
    }

    outlet
    {
        // Una salida de flujo libre es equivalente a una condici√≥n
        // de borde de gradiente de velocidad nulo
        type            zeroGradient;
    }

    walls
    {
        type            noSlip;
    }
}

